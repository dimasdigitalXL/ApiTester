{
  "endpoints": [
    { 
      "name": "Get SalesOrders List",
      "url": "https://${XENTRAL_ID}.xentral.biz/api/salesOrders",
      "method": "GET",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "query": {
        "filter[0][key]": "status",
        "filter[0][op]": "equals",
        "filter[0][value]": "released",
        "page[number]": 1,
        "page[size]": 50
      },
      "expectedStructure": "expected/salesOrderList.json"
    },
    {
      "name": "Get SalesOrder View",
      "url": "https://${XENTRAL_ID}.xentral.biz/api/salesOrders",
      "method": "GET",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "query": {},
      "requiresId": true,
      "expectedStructure": "expected/salesOrderView.json"
    },
    {
      "name": "Create New Product",
      "url": "https://${XENTRAL_ID}.xentral.biz/api/products",
      "method": "POST",
      "headers": {
        "Content-Type": "application/vnd.xentral.default.v2-beta+json",
        "Accept": "application/json"
      },
      "bodyFile": "requestBodies/createProduct.json"
    },
    {
      "name": "Get List Products",
      "url": "https://${XENTRAL_ID}.xentral.biz/api/products",
      "method": "GET",
      "headers": {
        "Accept": "application/json",
        "Content-Type": "application/json"
      },
      "query": {
        "order[0][field]": "id",
        "order[0][dir]": "desc",
        "page[number]": 1,
        "page[size]": 10
      },
      "expectedStructure": "expected/listProducts.json"
    }
  ]
}